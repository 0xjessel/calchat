include includes/navbar

div.container-fluid
  div.row-fluid#main-row
    div.span3
      div.well
        div.name
          a(href='http://www.facebook.com/'+user.id)
            img(src='http://graph.facebook.com/'+user.id+'/picture?type=square').avatar.avatar-large
          h1.name #{user.firstname + ' ' + user.lastname.charAt(0)}
        div.info
          div.split.labels
            p First name
            p Last name
            p Email address
          div.split
            p #{user.firstname}
            p #{user.lastname}
            p #{user.email}
    div.span4
      div.well
        h1 Preferences
        form#preferences-form
          fieldset
            legend Notifications
            div.control-group.phone
              label(for='input-phone') Phone Number
              input(type='tel', name='phone', value=user.phone, placeholder='eg: 5102252428', disabled=user.phoneenable==0).input-medium.inline#input-phone
              label.checkbox.inline
              input(type='checkbox', name='phoneenable', checked=user.phoneenable!=0).inline#input-phoneenable
              a(href='javascript:void(0)', rel='tooltip', title='Enable notifications to this device', class=user.phoneenable!=0 ? 'icon-visible' : 'icon-hidden').icon-phoneenable
                i.icon-exclamation-sign
            div.control-group.email
              label(for='input-email') Email Address
              input(type='email', name='email', value=user.email, placeholder='eg: username@example.com', disabled=user.emailenable==0).input-medium.inline#input-email
              label.checkbox.inline
              input(type='checkbox', name='emailenable', checked=user.emailenable!=0).inline#input-emailenable
              a(href='javascript:void(0)', rel='tooltip', title='Enable notifications to this address', class=user.emailenable!=0 ? 'icon-visible' : 'icon-hidden').icon-emailenable
                i.icon-exclamation-sign
          button(type='button').btn.btn-primary.save-button Save
          button(type='button').btn.cancel-button Cancel
          span.fail-message An error occurred.