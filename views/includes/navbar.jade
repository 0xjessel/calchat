div.navbar.navbar-fixed-top
  div.navbar-inner
    div.container
      a(data-toggle='collapse', data-target='.nav-collapse').btn.btn-navbar
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a(href='/').brand #{title}
      div.nav-collapse
        ul.nav
          if index == 0
            li.active
              a(href='/') Home
          else 
            li
              a(href='/') Home
          if loggedIn
            if index == 1
              li.active
                a(href='/dashboard') Dashboard
            else 
              li
                a(href='/dashboard') Dashboard
            if index == 2
              li.active
                a(href='/chat') Chat
            else 
              li
                a(href='/chat') Chat
            li.divider-vertical
            form.navbar-search.pull-left
              input(type='text', placeholder='Add Chatroom').search-query
        if loggedIn
          ul.nav.pull-right
            li.dropdown
              a(href='#', data-toggle='dropdown', style='padding:5px').dropdown-toggle
                img(src='http://graph.facebook.com/'+user.id+'/picture?type=square', height='30', width='30').avatar 
                #{user.firstname+' '+user.lastname}
                b(style='margin-top:12px').caret
              ul.dropdown-menu
                li
                  a(href='/preferences') Preferences
                li.divider
                li
                  a(href='/logout') Logout