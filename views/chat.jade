include includes/navbar

div.container-fluid
  div.row-fluid
    div.span3
      // sidebar content
      div.well.sidebar-nav
        ul.nav.nav-list.sidebar.unstyled.rooms#chats
          li.nav-header 
            i.icon-comment
            span.header-text
              | Chatrooms
            img(src='/img/loading.gif').loading
        ul.nav.nav-list.sidebar.unstyled.rooms#private
          li.nav-header 
            i.icon-user
            span.header-text
              | Private Chats
            img(src='/img/loading.gif').loading

      div.well.sidebar-nav
        ul.nav.nav-list.sidebar.unstyled#online
          li.nav-header 
            i.icon-off
            span.header-text
              | Online
            img(src='/img/loading.gif').loading

    div.span9
      div.hero-unit#body-content
        div.chat-header
          img(src='/img/loading.gif', style='float:right').loading
          div.chat-title
            h2.title-text Loading...
            h3.title-text
          div.actions.hidden
            a(href='#', rel='tooltip', title='view archives')#archives
              i.icon-inbox.action
            a(href='https://www.facebook.com/sharer/sharer.php?u=http%3A%2F%2Fcalchat.net%3A3000', target='_blank', rel='tooltip', title='share chatroom')#share
              i.icon-share.action
            if loggedIn
              a(href='javascript:void(0)', rel='tooltip', title='close chatroom')#close
                i.icon-remove.action
        div#chat
          div#messages
            div#lines
        hr
        if loggedIn
          form.form-inline#send-message
            div.input-append
              input(type='text', size='16', disabled='true', autocomplete='off', name='input-message', data-provide='typeahead').span7#message<
              button(type='submit').btn Send
        else 
          div.fake-input
            input(type='text', size='16', disabled='true', title='login with facebook to participate!').span6
            a(href='/auth/facebook', rel='tooltip', title='login with facebook to participate!')#login

audio(id='ping', src='/audio/simple_low.mp3', style='display:none')